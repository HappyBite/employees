<div class="post-wrapper">
	<div id="post" class="block">
		{{ post | update_post }}
		<div class="row-fluid block">
			<div class="presentation span5">
				{% for image in post.images %}
				{% if forloop.first %}
				<div id="image-placeholder" class="image">
					<a href="{{image.url}}">
						<img src="{{image.url}}" />
					</a>
				</div>
				{% endif %}
				{% endfor %}
			</div>
			<div class="span1">
				{% for image in post.images %}
				{% if forloop.first %}
				<div class="post-images">
					<ul>
						{% endif %}
						<!--% unless forloop.first %-->
						<li>
							<a href="{{image.url}}">
								<img src="{{image.url}}" />
							</a>
						</li>
						<!--% endunless %-->
						{% if forloop.last %}
					</ul>
				</div>
				{% endif %}
				{% endfor %}
			</div>
			<div class="details span6">
				<div class="text">
					<h1 class="title">{{ post.title }}</h1>
					{{ post.content }}
				</div>
			</div>
		</div>
	</div>
</div>
{% get_template_part 'snippets/related-posts' %}
